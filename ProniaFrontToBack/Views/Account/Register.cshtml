@model RegisterVm

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for=Name>First Name</label>
                                    <input asp-for=Name placeholder="First Name" />
                                    <span asp-validation-for="Name" style="color:red"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for=Surname>Last Name</label>
                                    <input asp-for=Surname placeholder="Last Name" />
                                    <span asp-validation-for="Surname" style="color:red"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for=Email>Email Address*</label>
                                    <input asp-for=Email placeholder="Email Address" />
                                    <span asp-validation-for="Email" style="color:red"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for=UserName>UserName*</label>
                                    <input asp-for=UserName placeholder="UserName" />
                                    <span asp-validation-for="UserName" style="color:red"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for=Password>Password</label>
                                    <input asp-for=Password placeholder="Password" />
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for=ConfirmPassword>Confirm Password</label>
                                    <input asp-for=ConfirmPassword placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                </div>
                                <div asp-validation-summary="All">

                                </div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>