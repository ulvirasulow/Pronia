@model LoginVm

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label asp-for=EmailOrUsername>Email Or Username*</label>
                                    <input asp-for=EmailOrUsername placeholder="Email Or Username" />
                                </div>
                                <div class="col-lg-12">
                                    <label asp-for=Password>Password</label>
                                    <input asp-for=Password placeholder="Password" />
                                </div>
                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input asp-for=Remember id="remember_me" />
                                        <label asp-for=Remember>Remember me</label>
                                    </div>
                                </div>
                                <div asp-validation-summary="All" class="text-danger">

                                </div>
                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a asp-action="ForgetPassword"> Forgotten pasward?</a>
                                    </div>
                                </div>
                                <div class="col-lg-12 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>