@model Slider

<div class="container">

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Title">Title</label>
                <input class="form-control" placeholder="Enter Title Name" asp-for="Title">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="SubTitle">SubTitle</label>
                <input class="form-control" placeholder="Enter SubTitle Name" asp-for="SubTitle">
                <span asp-validation-for="SubTitle" style="color:red"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="File">Choose Image</label>
                <input class="form-control" placeholder="Select Image" asp-for="File">
                <span asp-validation-for="File" style="color:red"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>
        </div>        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>